?>
<div class="box-collateral-tabs">
    <ul class="nav nav-tabs" id="product-tabs">
        <?php foreach ($this->getTabs() as $_index => $_tab): ?>

            <?php if($this->getChildHtml($_tab['alias'])): ?>
                <li class="<?php echo !$_index?'active first':(($_index==count($this->getTabs())-1)?' last':'')?>">
                    <a href="#product_tabs_<?php echo $_tab['alias'] ?>" data-toggle="tab"><?php echo $_tab['title']?></a>
                </li>
            <?php endif; ?>

        <?php endforeach; ?>
    </ul>

    <div class="tab-content" id="product-tabs-content">
        <?php foreach ($this->getTabs() as $_index => $_tab): ?>

            <?php if($this->getChildHtml($_tab['alias'])): ?>
                <div class="tab-pane <?php echo !$_index?'active first':(($_index==count($this->getTabs())-1)?' last':'')?>" id="product_tabs_<?php echo $_tab['alias'] ?>">
                    <?php echo $this->getChildHtml($_tab['alias']) ?>
                </div>
            <?php endif; ?>

        <?php endforeach; ?>
    </div>
</div>
